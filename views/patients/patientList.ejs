<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("../partials/head", { title: "Patient List" }) %>
</head>

<body>
  <div class="container">
    <%- include("../partials/navbar", { page: "patients" }) %>

    <div class="container-fluid" style="margin-top: 15pt;">
      <div class="container-fluid">
        <p class="h2">Patient List</p>
      </div>
      <div class="float-end">
        <a class="btn btn-primary" href="/patients/add" role="button">Add Patient</a>
      </div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Address</th>
            <th scope="col">Disease</th>
            <th scope="col">Doctor</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(el => { %>
           <tr>
             <th scope="row"><%= el.id %></td>
             <td><%= el.showFullName() %></td>
             <td><%= el.age %></td>
             <td><%= shortValue(el.address) %></td>
             <td><%= el.Disease.name %></td>
             <td><%= showDoctorName(el.Doctor) %></td>
             <td>
               <a class="btn btn-secondary" href="/patients/<%= el.id %>/edit">Edit</a>
               <a class="btn btn-secondary" href="/patients/<%= el.id %>/assigndoctor">Assign Doctor</a>
               <a class="btn btn-secondary" href="/patients/<%= el.id %>/delete">Done</a>   
             </td>
           </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>

</html>